<h3>プロフィール</h3>
 

<%= form_with model: @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :image ,"アイコン画像" %></th>
      <td><%= f.file_field :image %></td>
    </tr>
    <tr>
      <th><%= f.label :introduction ,"一言紹介" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
      <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
    </ul>
  </div>
<% end %>

<div>
  <ul>
    <li><%= link_to "アカウント", :users %></li>
  </ul>
  <ul>
    <li><%= link_to "プロフィール",  "/users/#{current_user.id}/edit" %></li>
  </ul>
</div>

