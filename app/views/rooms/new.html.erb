<h3>新規作成</h3>

<%= render "shared/error", obj: @room %>
 
<%= form_with model: @room do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"ルーム名" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :address ,"住所" %></th>
      <td><%= f.text_field :address %></td>
    </tr>

    <tr>
      <th><%= f.label :charge ,"料金" %></th>
      <td><%= f.number_field :charge %></td>
    </tr>

    <tr>
      <th><%= f.label :introduction ,"ルーム紹介" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>

    <tr>
      <th><%= f.label :image ,"写真" %></th>
      <td><%= f.file_field :image %></td>
    </tr>

  </table>

  <div>
    <ul>
      <li><%= f.submit "登録"%></li>
    </ul>
  </div>
<% end %>
