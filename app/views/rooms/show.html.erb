<h3>新規予約</h3>
<table>
  <tr>
    <th>ルーム名</th>
    <td><%= @room.name %></td>
  </tr>
  <tr>
    <th>ルーム紹介</th>
    <td><%= @room.introduction %></td>
  </tr>
  <tr>
    <th>料金</th>
    <td>¥<%= @room.charge %>/日</td>
  </tr>
</table>

<%= form_with model: @reservation do |f| %>
  <table>
    <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>

    <tr>
      <th><%= f.label :person, "人数" %></th>
      <td><%= f.number_field :person %></td>
    </tr>
  </table>
  <%= f.hidden_field :room_id, value: @room.id %>
  <div>
    <ul>
      <li><%= f.submit "確認画面へ"%></li>
    </ul>
  </div>
  <% end %>
